<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.feicuiedu.retrofitdemo.MainActivity">

    <Button
        android:id="@+id/okhttpGET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Okhttp的GET请求"/>

    <Button
        android:id="@+id/okhttpGET1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Okhttp的GET请求(拆分)"/>


    <Button
        android:id="@+id/okhttpPOST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OkHttp的POST请求"/>

    <Button
        android:id="@+id/retrofitGet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retrofit的GET请求"/>

    <Button
        android:id="@+id/retrofitPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retrofit的POST请求"/>

</LinearLayout>
